@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="~/Manage/Index"><img src="~/Img/myacc.png" style="max-width: 50px; left:-60px;position:absolute; top:-10px; max-height: 50px" /></a>
        </li>
        <li>
            <a href="~/Manage/Index"><img src="~/Img/settings-icon.png" style="max-width: 50px; left:-20px;position:absolute; top:-10px; max-height: 50px" /></a>
        </li>
        <li style="font-size:25px; font-weight:bold"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">

    @if (!User.Identity.IsAuthenticated)
    {
        <li style="font-size:25px; font-weight:bold">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li style="font-size:25px; font-weight:bold">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    }
</ul>
}

@section Styles {
    <link href="@Url.Content("~/Scripts/style.css")" rel="stylesheet" type="text/css" />
}